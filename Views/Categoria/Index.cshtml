        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CategoriaId">Editar @item.Title</a> |
                <a asp-action="Details" asp-route-id="@item.CategoriaId">Visulizar @item.Title</a> |
                <a asp-action="Delete" asp-route-id="@item.CategoriaId">Deletar @item.Title</a>
            </td>
        </tr>
}
    </tbody>
</table>

